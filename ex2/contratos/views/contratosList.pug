extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de Contratos
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Objecto Contrato
                    th Data de Celebração
                    th Preço Contratual
                    th NIPC Entidade Comunicante
                    th Entidade Comunicante
                each contrato in data
                    tr
                        td
                            a(href=`http://localhost:16001/${contrato._id}`)= contrato._id
                        td= contrato.objectoContrato
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td
                            a(href=`http://localhost:16001/entidades/${contrato.entidade_comunicante}`)= contrato.NIPC_entidade_comunicante
                        td= contrato.entidade_comunicante


        footer.w3-container.w3-teal
            address Generated by EngWeb2024 in #{date} - 
                a(href="/") [Voltar a página prinicipal]