extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de Contratos da Entidade
        .w3-container
            if data.length > 0
                p
                    b NIPC Entidade Comunicante:
                    span= data[0].NIPC_entidade_comunicante
                p
                    b Entidade Comunicante:
                    span= data[0].entidade_comunicante
                if totalContratos
                    p
                        b Soma de contratos:
                        span= totalContratos
                        
                table.w3-table-all
                    tr
                        th Id
                        th Objecto Contrato
                        th Data de Celebração
                        th Preço Contratual
                    each contrato in data
                        tr
                            td
                                a(href=`http://localhost:16001/${contrato._id}`)= contrato._id
                            td= contrato.objectoContrato
                            td= contrato.dataCelebracaoContrato
                            td= contrato.precoContratual

            else
                p Não foram encontrados contratos para esta entidade.

        footer.w3-container.w3-teal
            address Generated by EngWeb2024 in #{date} - 
                a(href="/") [Voltar a página prinicipal]