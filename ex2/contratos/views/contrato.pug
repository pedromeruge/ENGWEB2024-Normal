extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Contrato Detalhes
        .w3-container
            if data._id
                p 
                    b Id: 
                    span= data._id
            if data.tipoprocedimento
                p 
                    b Tipo de Procedimento: 
                    span= data.tipoprocedimento
            if data.objectoContrato
                p 
                    b Objecto do Contrato: 
                    span= data.objectoContrato
            if data.dataPublicacao
                p 
                    b Data de Publicação: 
                    span= data.dataPublicacao
            if data.dataCelebracaoContrato
                p 
                    b Data de Celebração do Contrato: 
                    span= data.dataCelebracaoContrato
            if data.precoContratual
                p 
                    b Preço Contratual: 
                    span= data.precoContratual
            if data.prazoExecucao
                p 
                    b Prazo de Execução: 
                    span= data.prazoExecucao
            if data.NIPC_entidade_comunicante
                p 
                    b NIPC Entidade Comunicante:
                    span
                        a(href=`http://localhost:16001/entidades/${data.entidade_comunicante}`)= data.NIPC_entidade_comunicante
            if data.entidade_comunicante
                p 
                    b Entidade Comunicante: 
                    span= data.entidade_comunicante
            if data.fundamentacao
                p 
                    b Fundamentação: 
                    span= data.fundamentacao
        footer.w3-container.w3-teal
            address Gerado por EngWeb2024 em #{date} - 
                a(href="/") [Voltar à lista de contratos]